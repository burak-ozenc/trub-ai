# Backend Environment Variables

# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://trubai_user:trubai_pass@postgres:5432/trubai

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Audio Service
AUDIO_SERVICE_URL=http://audio-service:8001

# LLM Service
LLM_SERVICE_URL=http://llm-service:8002

# AWS S3 Configuration
# For local development with LocalStack (use "test" for both access keys):
AWS_REGION=us-east-1
AWS_S3_BUCKET=trubai-media-local
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localstack:4566

# For production AWS (uncomment and set real values):
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=trubai-media-production
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_ENDPOINT_URL= (leave empty for production AWS)

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
