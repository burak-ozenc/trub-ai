# ==============================================
# TRUB.AI v2 - Environment Variables Template
# ==============================================
# Copy this file to .env and update with your values

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
POSTGRES_USER=trubai_user
POSTGRES_PASSWORD=trubai_pass
POSTGRES_DB=trubai

# Full database connection URL
DATABASE_URL=postgresql://trubai_user:trubai_pass@postgres:5432/trubai

# ----------------------------------------------
# Backend Configuration (Node.js)
# ----------------------------------------------
NODE_ENV=development
BACKEND_PORT=3000

# JWT Authentication
# IMPORTANT: Generate a secure secret for production
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-VERY-IMPORTANT
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Audio Service URL (internal Docker network)
AUDIO_SERVICE_URL=http://audio-service:8001

# ----------------------------------------------
# Audio Service Configuration (Python)
# ----------------------------------------------
AUDIO_SERVICE_PORT=8001
LOG_LEVEL=info

# ----------------------------------------------
# Frontend Configuration (React)
# ----------------------------------------------
# These URLs should point to localhost for browser access
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# ----------------------------------------------
# Optional: External APIs (for future use)
# ----------------------------------------------
# GROQ_API_KEY=your-groq-api-key
# CLOUDINARY_CLOUD_NAME=your-cloudinary-name
# CLOUDINARY_API_KEY=your-cloudinary-key
# CLOUDINARY_API_SECRET=your-cloudinary-secret


# AWS S3 Configuration
# For local development with LocalStack (use "test" for both access keys):
AWS_REGION=us-east-1
AWS_S3_BUCKET=trubai-media-local
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localstack:4566